<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10260f"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:background="#42f5a4"
        android:textColor="#2d694e"
        android:gravity="center"
        android:textSize="35dp"
        android:text="Lista de Compras" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/editNovoProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Novo Produto"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:inputType="text" />

            <ImageView
                android:id="@+id/imageButtonAddProduto"
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@android:drawable/ic_input_add" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/editRemoverProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:ems="10"
                android:hint="Remover Produto"
                android:inputType="number" />

            <ImageView
                android:id="@+id/imageButtonRemoverProduto"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:focusable="true"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_delete" />

        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/lista"
        android:layout_width="274dp"
        android:background="#ffffff"
        android:layout_height="201dp"
        android:layout_gravity="center"

        >

    </ListView>

    <Button
        android:id="@+id/button"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0ceb71"
        android:text="VOLTAR"
        android:textColor="#000000"
        android:textSize="20dp" />


</LinearLayout>