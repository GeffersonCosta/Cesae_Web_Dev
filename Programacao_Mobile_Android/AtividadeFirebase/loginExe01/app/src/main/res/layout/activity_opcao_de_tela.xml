<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#4B7B9D"
    android:backgroundTint="#4B7B9D"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OpcaoDeTelaActivity">


    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Escolha uma opção"
            android:textColor="#ffffff"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/button_listaProduto"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            android:text="Lista de produtos"

            android:textColor="#113454"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="230dp" />

        <Button
            android:id="@+id/button_listaTarefa"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            android:text="Lista de Tarefas"
            android:textColor="#113454"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="230dp" />

    </LinearLayout>


</LinearLayout>